<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="welcome-gradient">
    <StackLayout class="p-8 items-center justify-center h-full">
        <Label text="TravelAI" class="text-4xl font-bold text-white mb-4" />
        <Label text="Your Personal Travel Planner" class="text-xl text-white mb-8" textWrap="true" />
        
        <Button text="Start Planning" tap="{{ onStartPlanning }}" class="btn-primary w-3/4" />
        
        <StackLayout class="mt-8">
            <Button text="Sign in with Google" tap="{{ onGoogleSignIn }}" class="bg-white text-black font-semibold rounded-lg p-4 w-64 mb-4" />
            <Button text="Sign in with Apple" tap="{{ onAppleSignIn }}" class="bg-black text-white font-semibold rounded-lg p-4 w-64 mb-4" />
            <Button text="Sign in with Email" tap="{{ onEmailSignIn }}" class="bg-gray-100 text-black font-semibold rounded-lg p-4 w-64" />
        </StackLayout>
    </StackLayout>
</Page>